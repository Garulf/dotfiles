# tmux lock-server

playerctl -a pause
i3lock-color -c 00000000 --nofork &
bpid=$!

# Ensure eww widgt is displayed after i3lock
until pidof i3lock-color; do sleep 15; done
eww open lockscreen

wait $bpid
kill $hook_id
source ~/scripts/unlock
